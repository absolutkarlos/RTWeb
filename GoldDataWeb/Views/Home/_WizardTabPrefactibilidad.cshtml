@using GD.Models.Commons
@using GoldDataWeb.Models

@model HomeViewModel

<div class="tab-pane" id="prefactibilidad">
	<div class="row">
		<h4 class="info-text"> Evaluar la prefactibilidad de una orden de servicio </h4>
		<div class="col-sm-12 col-md-12 col-lg-12">
			<input id="input-700NOC" name="input_noc" type="file" multiple class="file-loading">
		</div>
		<div class="col-sm-12 col-md-12 col-lg-12" style="text-align: center;">
			<input type="button" id="rechazarPreFactibility" name="" class="btn btn-default btn-danger" value="Rechazar" data-toggle="confirmation" data-status="2" style="opacity: 2;margin-top: 40px;text-align: center;margin-right: 60px;width: 110px;
				@(Model.Order.ListOrderFlow.Any(a => a.IdOrderStatus == (int)OrderStatus.Type.Prefactibilidad && a.IdStatus == (int)Status.Type.Inactivo || a.IdOrderStatus == (int)OrderStatus.Type.Prefactibilidad && a.IdStatus == (int)Status.Type.Activo) ? @"display: none;" : @"display: inline-block;")">
			<input type="button" id="aprobarPreFactibility" name="" class="btn btn-default btn-success" value="Aprobar" data-toggle="confirmation" data-status="1" style="opacity: 2;margin-top: 40px;text-align: center;width: 110px;
				@(Model.Order.ListOrderFlow.Any(a => a.IdOrderStatus == (int)OrderStatus.Type.Prefactibilidad && a.IdStatus == (int)Status.Type.Activo) ? @"display: none;" : @"display: block;")">
		</div>
	</div>
</div>

<div id="confirmPreFactibility" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
	<div class="modal-dialog modal-md">
		<div class="modal-content">
			<div class="modal-header" style="border-bottom: 1px solid #e5e5e5;">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="exampleModalLabel">Información</h4>
			</div>
			<div class="modal-body">
				Esta seguro quede desea <span id="titleModalAction" style="font-weight: bold;"></span> la pre-factibilidad.
			</div>
			<div class="modal-footer">
				<button type="button" data-dismiss="modal" class="btn btn-primary" id="buttomModalConfirm">Aceptar</button>
				<button type="button" data-dismiss="modal" class="btn btn-default" style="color: #333;background-color: #fff;border: 1px solid #ccc;">Cancelar</button>
			</div>
		</div>
	</div>
</div>