<div class="tab-pane" id="localization">
	<div class="row">
		<h4 class="info-text"> Añadir la informacion de la ubicación </h4>
		<div class="col-sm-12">
			<div class="row">
				<div class="col-sm-12">
					<div class="form-group">
						<label> BUSCAR <small></small></label>
						<input name="coords" id="coords" type="text" class="form-control" placeholder="Busqueda" style="width: 100% !important;">
					</div>
				</div>
				<div class="col-sm-12">
					<!--<input id="pac-input" class="controls" type="text" placeholder="Busqueda">-->
					<div id="googleMap" style="width: 100%; height: 380px;"></div>
					<div id="elevation_chart" style="width: 100%;"></div>
				</div>
			</div>
		</div>
		<div class="col-sm-12">
			<hr />
		</div>
		<div class="col-sm-12">
			<div class="row">
				<div class="col-sm-6">
					<div class="form-group">
						<label> Latitud</label>
						<input name="latitude" id="latitude" type="text" class="form-control" placeholder="Coordenadas" style="width: 100% !important;" disabled>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label> Longitud </label>
						<input name="longitude" id="longitude" type="text" class="form-control" placeholder="Coordenadas" style="width: 100% !important;" disabled>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label> NOMBRE <small>(requerido)</small></label>
						@Html.TextBox(@"siteName", string.Empty, new { id = @"siteName", type = @"text", @class = @"form-control", placeholder = @"Nombre...", style = @"width: 100% !important;" })
					</div>
					<div class="form-group">
						<label> TIPOS DE SERVICIO <small>(requerido)</small></label>
						@Html.DropDownList(@"servicetype", new List<SelectListItem>(), @"", new { id = @"servicetype", @class = @" form-control js-example-basic-multiple", multiple = @"multiple", style = @"width: 100%;" })
					</div>
					<div class="form-group">
						<label st> ANCHO DE BANDA <small>(requerido)</small></label>
						<div style="display: table; width: 100%;">
							<div style="display: table-row">
								<div style="display: table-cell; vertical-align: top; width: 70px; min-width: 70px; padding-right: 1px;">
									@Html.DropDownList(@"unittype", new List<SelectListItem>
									{
										new SelectListItem
										{
											Value = @"0",
											Text = "MB",
											Selected = true
										},
										new SelectListItem
										{
											Value = @"1",
											Text = "GB"
										},
										new SelectListItem
										{
											Value = @"2",
											Text = "TB"
										},
										new SelectListItem
										{
											Value = @"3",
											Text = "PB"
										},
										new SelectListItem
										{
											Value = @"4",
											Text = "EB"
										},
										new SelectListItem
										{
											Value = @"5",
											Text = "ZB"
										},
										new SelectListItem
										{
											Value = @"6",
											Text = "YB"
										}
									}, @"", new { id = @"unittype", @class = @" form-control", style = @"" })
								</div>
								<div style="display: table-cell; vertical-align: top; padding-left: 1px;">
									@Html.TextBox(@"broadband", string.Empty, new { id = @"broadband", type = @"text", @class = @"form-control", placeholder = @"Ancho de Banda...", style = @"width: 100% !important;" })
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="form-group">
						<label> DIRECCIÓN DETALLADA <small>(requerido)</small></label>
						<textarea style="width: 100%; resize: none;" id="sitedetailedadress" name="sitedetailedadress" class="form-control" placeholder="Dirección..." rows="5" cols="15" aria-invalid="false"></textarea>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-12">
			<div class="row">
				<div class="col-sm-6">
					<h5 class="info-text" style="margin-bottom: 0; font-weight: bold;"> Horarios de Atención </h5>
					<div class="row">
						<div class="col-sm-12" id="listSchedule">
							<div class="form-group" id="siteScheduleListEmpty" style="display: table; width: 100%;">
								<label class="Infolabel" style="height: 50px; display: table-cell; vertical-align: bottom;">No hay horarios agregados</label>
							</div>
						</div>
					</div>
				</div>
			</div>
			<h6 class="info-text"> Añadir horarios de acceso al edificio </h6>
			<hr>
			<div class="row">
				<div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
					<div class="choice" data-toggle="wizard-checkbox" rel="tooltip" title="" data-original-title="" style="margin-top: 0;">
						<input class="week" type="checkbox" name="type" value="1">
						<div class="icon" style="height: 70px;width: 70px;">
							<small style="line-height: 65px;">Lunes</small>
						</div>
					</div>
				</div>
				<div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
					<div class="choice" data-toggle="wizard-checkbox" rel="tooltip" title="" data-original-title="" style="margin-top: 0;">
						<input class="week" type="checkbox" name="type" value="2">
						<div class="icon" style="height: 70px;width: 70px;">
							<small style="line-height: 65px;">Martes</small>
						</div>
					</div>
				</div>
				<div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
					<div class="choice" data-toggle="wizard-checkbox" rel="tooltip" title="" data-original-title="" style="margin-top: 0;">
						<input class="week" type="checkbox" name="type" value="3">
						<div class="icon" style="height: 70px;width: 70px;">
							<small style="line-height: 65px;">Miercoles</small>
						</div>
					</div>
				</div>
				<div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
					<div class="choice" data-toggle="wizard-checkbox" rel="tooltip" title="" data-original-title="" style="margin-top: 0;">
						<input class="week" type="checkbox" name="type" value="4">
						<div class="icon" style="height: 70px;width: 70px;">
							<small style="line-height: 65px;">Jueves</small>
						</div>
					</div>
				</div>
				<div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
					<div class="choice" data-toggle="wizard-checkbox" rel="tooltip" title="" data-original-title="" style="margin-top: 0;">
						<input class="week" type="checkbox" name="type" value="5">
						<div class="icon" style="height: 70px;width: 70px;">
							<small style="line-height: 65px;">Viernes</small>
						</div>
					</div>
				</div>
				<div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
					<div class="choice" data-toggle="wizard-checkbox" rel="tooltip" title="" data-original-title="" style="margin-top: 0;">
						<input class="week" type="checkbox" name="type" value="6">
						<div class="icon" style="height: 70px;width: 70px;">
							<small style="line-height: 65px;">Sabado</small>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
					<div class="form-group">
						<label> HORA DE APERTURA <small>(requerido)</small></label>
						<div id="startime" class="bfh-timepicker" data-mode="12h" data-time="08:00 AM" data-placeholder="Hora de apertura...">
						</div>
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
					<div class="form-group">
						<label> HORA DEL CIERRE <small>(requerido)</small></label>
						<div id="endtime" class="bfh-timepicker" data-mode="12h" data-time="05:00 PM" data-placeholder="Hora del cierre...">
						</div>
					</div>
				</div>
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<input id="addSchedule" type="button" class="btn btn-fill btn-info btn-wd btn-sm" value="Añadir Horario" style="display: table;margin-right: auto;margin-top: 10px;background-color: royalblue;border-color: royalblue;">
					<hr>
				</div>
			</div>
		</div>
	</div>
</div>
